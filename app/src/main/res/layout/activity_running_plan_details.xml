<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:id="@+id/activity_running_plan_details_label_runningplan_name"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:inputType="none"
            android:text="@string/running_plan_name"
            android:importantForAutofill="no"
            android:labelFor="@id/activity_running_plan_details_edit_runningplan_name"
            android:ems="10"
            android:clickable="false"
            android:focusable="false"
            android:minHeight="48dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp" android:layout_marginStart="10dp"/>

    <EditText
            android:id="@+id/activity_running_plan_details_edit_runningplan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toEndOf="@+id/activity_running_plan_details_label_runningplan_name"
            android:layout_marginStart="5dp" android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp"/>
    <EditText
            android:id="@+id/activity_running_plan_details_label_runningplan_remarks"
            android:layout_width="368dp"
            android:layout_height="46dp"
            android:inputType="none"
            android:text="@string/remarks"
            android:ems="10"
            android:clickable="false"
            android:focusable="false"
            android:minHeight="48dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/activity_running_plan_details_edit_runningplan_name"
            app:layout_constraintTop_toBottomOf="@+id/activity_running_plan_details_edit_runningplan_name"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/activity_running_plan_details_label_runningplan_name"/>
    <EditText
            android:layout_width="362dp"
            android:layout_height="216dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/activity_running_plan_details_edit_runningplan_remarks"
            app:layout_constraintStart_toStartOf="@+id/activity_running_plan_details_label_runningplan_remarks"
            app:layout_constraintTop_toBottomOf="@+id/activity_running_plan_details_label_runningplan_remarks"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@+id/activity_running_plan_details_label_runningplan_remarks"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/activity_runningplan_details_button_training_details"
            android:text="@string/show_training_details"
            android:layout_height="43dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_running_plan_details_edit_runningplan_remarks"
            app:layout_constraintStart_toStartOf="@+id/activity_running_plan_details_edit_runningplan_remarks"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/activity_running_plan_details_switch_active_runningplan"
            android:text="@string/select_as_active_runningplan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_runningplan_details_button_training_details"
            app:layout_constraintStart_toStartOf="@+id/activity_runningplan_details_button_training_details"
            app:layout_constraintEnd_toEndOf="@+id/activity_runningplan_details_button_training_details"/>

    <EditText
            android:id="@+id/activity_running_plan_details_label_start_week"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:inputType="none"
            android:text="@string/select_week_of_start"
            android:importantForAutofill="no"
            android:ems="10"
            android:clickable="false"
            android:focusable="false"
            android:minHeight="48dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/activity_running_plan_details_switch_active_runningplan"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/activity_running_plan_details_switch_active_runningplan"
            app:layout_constraintEnd_toEndOf="@+id/activity_running_plan_details_switch_active_runningplan"/>
    <Spinner
            android:id="@+id/activity_running_plan_details_spinner_start_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_running_plan_details_label_start_week"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/activity_running_plan_details_label_start_week"
            app:layout_constraintEnd_toEndOf="@+id/activity_running_plan_details_label_start_week"/>
    <Button
            android:id="@+id/activity_running_plan_details_button_save"
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/activity_running_plan_details_spinner_start_week"
            app:layout_constraintTop_toBottomOf="@+id/activity_running_plan_details_spinner_start_week"
            android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>