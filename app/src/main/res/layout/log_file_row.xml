<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/log_file_row_constraint_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/log_file_row_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:clickable="false"
            android:focusable="false"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>
    <Button
            android:id="@+id/log_file_row_button"
            android:text="@string/details"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:layout_constraintStart_toEndOf="@+id/log_file_row_date_label"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/log_file_row_date_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/log_file_row_date_label"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/log_file_row_date_label"
            tools:ignore="UnknownId"/>


</androidx.constraintlayout.widget.ConstraintLayout>