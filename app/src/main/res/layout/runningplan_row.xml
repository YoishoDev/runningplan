<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/runningplan_row_state_imageview"
            app:srcCompat="@drawable/unused20x20"
            android:contentDescription="@string/state"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
    <TextView
            android:id="@+id/runningplan_row_name_textview"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:ems="10"
            android:clickable="false"
            android:focusable="false"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/runningplan_row_state_imageview" android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:id="@+id/runningplan_row_remarks_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="@+id/runningplan_row_name_textview"
            app:layout_constraintStart_toStartOf="@+id/runningplan_row_state_imageview"
            app:layout_constraintTop_toBottomOf="@+id/runningplan_row_name_textview"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/runningplan_row_remarks_textview"
            app:layout_constraintStart_toStartOf="@+id/runningplan_row_remarks_textview"
            app:layout_constraintEnd_toEndOf="@+id/runningplan_row_remarks_textview">

        <!--- Startdatum-->
        <ImageView
                android:id="@+id/runningplan_row_startdate_imageview"
                app:srcCompat="@drawable/baseline_calendar_today_black_24"
                android:contentDescription="@string/start_date"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/runningplan_row_startdate_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <!--- Dauer des gesamten Plans-->
        <ImageView
                android:id="@+id/runningplan_row_duration_imageView"
                app:srcCompat="@drawable/baseline_schedule_black_24"
                android:contentDescription="@string/duration"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/runningplan_row_duration_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <!--- bereits durchgefÃ¼hrter Anteil in Prozent-->
        <ImageView
                android:id="@+id/runningplan_row_completed_imageview"
                app:srcCompat="@drawable/baseline_percent_black_24"
                android:contentDescription="@string/percent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/runningplan_row_percentcompleted_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>