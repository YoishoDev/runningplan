<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


    <ImageView
            android:id="@+id/app_logo_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/runningplan40x40"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:id="@+id/app_name_textView"
            android:layout_height="0dp"
            android:inputType="none"
            android:text="@string/app_name"
            android:importantForAutofill="no"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/app_logo_imageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="@+id/app_logo_imageView"/>
    <TextView
            android:id="@+id/app_version_textView"
            android:inputType="none"
            android:text="@string/app_version"
            android:importantForAutofill="no"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="@+id/app_logo_imageView"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/app_name_textView"
            android:layout_marginStart="20dp"/>

    <TextView
            android:id="@+id/app_copyright_textView"
            android:inputType="none"
            android:text="@string/app_copyright"
            android:importantForAutofill="no"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/app_name_textView"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="@+id/app_name_textView"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_info_menu_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/app_copyright_textView" android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>