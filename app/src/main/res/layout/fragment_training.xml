<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.info.InfoFragment">

    <EditText
            android:id="@+id/editText_RunningPlanNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/running_plan"
            android:ems="10"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="38dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/editTextTrainingDaySelectLabel"
            android:layout_width="324dp"
            android:layout_height="46dp"
            android:inputType="none"
            android:text="@string/select_training_date"
            android:ems="10"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp" app:layout_constraintTop_toBottomOf="@+id/editText_RunningPlanName"/>
    <EditText
            android:id="@+id/editTextTrainingUnitsSelectLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/training_units"
            android:ems="10"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTrainingDateLabel"/>
    <EditText
            android:id="@+id/editText_RunningPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Dynamischer Name"
            android:ems="10"
            android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_RunningPlanNameLabel"/>
    <EditText
            android:id="@+id/editTextTrainingDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTrainingDaySelectLabel"
            app:layout_constraintStart_toStartOf="@+id/editTextTrainingDaySelectLabel"/>

    <!-- Spinner Element for training unit-->
    <Button
            android:id="@+id/buttonSelectTrainingDay"
            android:text="@string/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/editTextTrainingDateLabel"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTrainingDateLabel"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/editTextTrainingDateLabel"
            android:layout_marginStart="17dp" app:layout_constraintEnd_toEndOf="@+id/editTextTrainingDaySelectLabel"/>
    <Spinner
            android:id="@+id/spinner"
            android:layout_width="302dp"
            android:layout_height="29dp"
            android:prompt="Title"
            android:spinnerMode="dropdown" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTrainingUnitsSelectLabel"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/editTextTrainingUnitInfoLabel"
            android:layout_width="210dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="Gesamtdauer ca. 10 min"
            android:ems="10"
            android:textSize="16sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="47dp" app:layout_constraintTop_toBottomOf="@+id/spinner"/>
    <EditText
            android:id="@+id/editTextMovementTypeInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Laufabschnitt"
            android:ems="10"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/editTextTrainingUnitInfoLabel"/>
    <EditText
            android:id="@+id/editTextTrainingTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            tools:text="00:00:00"
            android:textAlignment="center"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="17dp" app:layout_constraintTop_toBottomOf="@+id/editTextMovementTypeInfoLabel"/>
    <ImageButton
            android:id="@+id/imageButtonPause"
            android:src="@drawable/pausebutton_gray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintEnd_toStartOf="@+id/imageButtonStart"
            android:layout_marginEnd="70dp"/>
    <ImageButton
            android:id="@+id/imageButtonStart"
            android:src="@drawable/playbutton_gray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp"
            android:contentDescription="TODO" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTrainingTimeLabel"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/imageButtonStop"
            android:src="@drawable/stopbutton_gray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintStart_toEndOf="@+id/imageButtonStart"
            android:layout_marginStart="70dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>