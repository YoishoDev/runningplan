<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.info.InfoFragment">

    <EditText
            android:id="@+id/editTextRunningPlanNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="none"
            android:hint="@string/running_plan"
            android:text="@string/running_plan"
            android:ems="10"
            android:textAlignment="center"
            android:autofillHints="" android:minHeight="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="10dp"/>
    <EditText
            android:id="@+id/editTextTrainingDaySelectLabel"
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:inputType="none"
            android:hint="@string/select_training_date"
            android:text="@string/select_training_date"
            android:ems="10"
            android:textAlignment="center"
            android:autofillHints=""
            app:layout_constraintStart_toStartOf="@+id/spinnerTrainingDay" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_RunningPlanName"/>
    <EditText
            android:id="@+id/editTextTrainingUnitsSelectLabel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="none"
            android:hint="@string/training_units"
            android:text="@string/training_units"
            android:ems="10"
            android:textAlignment="center"
            android:autofillHints=""
            app:layout_constraintEnd_toEndOf="@+id/spinnerTrainingDay"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/spinnerTrainingDay"/>
    <EditText
            android:id="@+id/editText_RunningPlanName"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="none"
            android:hint="@string/running_plan_name"
            android:text="@string/running_plan_name"
            android:ems="10"
            android:textAlignment="center" android:textStyle="bold"
            android:autofillHints="" tools:layout_editor_absoluteY="92dp"
            app:layout_constraintStart_toStartOf="@+id/editTextTrainingDaySelectLabel"
            app:layout_constraintEnd_toEndOf="@+id/editTextTrainingDaySelectLabel"
            app:layout_constraintTop_toBottomOf="@+id/editTextRunningPlanNameLabel" android:layout_marginTop="15dp"/>
    <Spinner
            android:id="@+id/spinnerTrainingDay"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:inputType="none"
            android:hint="@string/running_unit"
            android:text="@string/running_unit"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/editTextTrainingUnitsSelectLabel"
            app:layout_constraintEnd_toEndOf="@+id/editTextTrainingUnitsSelectLabel" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTrainingDaySelectLabel"/>

    <TextView
            android:id="@+id/editTextRunningUnitLabel"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:prompt="@style/TextAppearance.AppCompat.Title"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="@+id/editTextTrainingUnitInfoLabel"
            app:layout_constraintEnd_toEndOf="@+id/editTextTrainingUnitInfoLabel" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTrainingUnitsSelectLabel"/>
    <EditText
            android:id="@+id/editTextTrainingUnitInfoLabel"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:inputType="none"
            android:hint="@string/duration"
            android:text="@string/duration"
            android:ems="10"
            android:textSize="16sp"
            android:autofillHints=""
            app:layout_constraintStart_toStartOf="@+id/editTextTrainingInfoLabel" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextRunningUnitLabel"/>
    <EditText
            android:id="@+id/editTextTrainingInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="none"
            android:hint="@string/training_infos"
            android:text="@string/training_infos"
            android:ems="10"
            android:textAlignment="center"
            android:autofillHints=""
            app:layout_constraintStart_toStartOf="@+id/chronometer"
            app:layout_constraintEnd_toEndOf="@+id/chronometer"
            app:layout_constraintTop_toBottomOf="@+id/editTextTrainingUnitInfoLabel" android:layout_marginTop="15dp"/>
    <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="time"
            android:ems="10"
            tools:text="00:00:00"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageButtonPause"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonStop" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTrainingInfoLabel"/>
    <ImageButton
            android:id="@+id/imageButtonPause"
            android:src="@drawable/pausebutton_gray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/pause"
            app:layout_constraintTop_toTopOf="@+id/imageButtonStart"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonStart" android:layout_marginEnd="40dp"/>
    <ImageButton
            android:id="@+id/imageButtonStart"
            android:src="@drawable/playbutton_gray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/chronometer"/>
    <ImageButton
            android:id="@+id/imageButtonStop"
            android:src="@drawable/stopbutton_gray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/stop"
            app:layout_constraintTop_toTopOf="@+id/imageButtonStart"
            app:layout_constraintStart_toEndOf="@+id/imageButtonStart" android:layout_marginStart="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>