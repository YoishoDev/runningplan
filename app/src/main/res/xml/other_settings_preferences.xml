<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/title_location">

        <SwitchPreferenceCompat
                app:key="location_data"
                app:title="@string/use_location_data"/>

        <SwitchPreferenceCompat
                app:key="fine_location_data"
                app:title="@string/use_fine_location_data"
                app:summaryOn="@string/fine_location_data_summary_on"
                app:summaryOff="@string/fine_location_data_summary_off"/>

    </PreferenceCategory>
</PreferenceScreen>